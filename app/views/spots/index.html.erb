<!--検索フォーム-->
<%= search_form_for @q do |f| %>
    <%= f.label :"スポット検索" %>
    <%= f.search_field :name_cont %>

    <%= f.submit "検索" %>
    <% end %>
    <!--検索結果-->
    <% if @spots.present? %>
        <!--検索がヒットした場合-->
        <% @spots.each do |spot| %>
            <%= spot.id %>
            <%= spot.name %>
        <% end %>
    <% else %>
    <!--検索がヒットしなかった場合-->
    <p>検索結果はありません</p>
<% end %>
